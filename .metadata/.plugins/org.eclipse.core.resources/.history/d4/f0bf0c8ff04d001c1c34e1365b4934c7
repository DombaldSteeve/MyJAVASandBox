package test;

public class CompteBancaire {

	int solde;
	private int autorisation = -500;
	
	public CompteBancaire(int initialisation) {
		solde = initialisation;
	}
	
	public void deposit(int depot) {
		solde = depot + solde;
		System.out.println("Vous venez de faire un depôt de " + depot + ". Votre nouveau solde est donc de " + solde + ".");
	}
	
	
	public String toString() {
		return ("Votre solde est de " + solde + " et votre autorisation de découvert est de " + autorisation + ".");
		}
	
	
	public static void main(String[] args) {
		
		 CompteBancaire solde = new CompteBancaire(500);
		 
		 solde.deposit(20);
			
		}
	
	}
	
	

